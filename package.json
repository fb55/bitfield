{
    "type": "commonjs",
    "name": "bitfield",
    "description": "a simple bitfield, compliant with the BitTorrent spec",
    "version": "4.2.0",
    "author": "Felix Boehm <me@feedic.com>",
    "funding": {
        "url": "https://github.com/sponsors/fb55"
    },
    "sideEffects": false,
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "module": "lib/esm/index.js",
    "exports": {
        "import": "./lib/esm/index.js",
        "require": "./lib/index.js"
    },
    "directories": {
        "lib": "lib/"
    },
    "files": [
        "lib/**/*"
    ],
    "bugs": {
        "url": "https://github.com/fb55/bitfield/issues"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.4",
        "@eslint/compat": "^2.0.2",
        "@feedic/eslint-config": "^0.1.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^25.3.0",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.3.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0"
    },
    "engines": {
        "node": ">=8"
    },
    "keywords": [
        "bitfield",
        "buffer",
        "bittorrent"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/fb55/bitfield"
    },
    "scripts": {
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc --sourceRoot https://raw.githubusercontent.com/fb55/bitfield/$(git rev-parse HEAD)/src/",
        "build:esm": "npm run build:cjs -- --module esnext --target es2019 --outDir lib/esm && echo '{\"type\":\"module\"}' > lib/esm/package.json",
        "format": "npm run format:es && npm run format:biome",
        "format:biome": "biome check --write .",
        "format:es": "npm run lint:es -- --fix",
        "lint": "npm run lint:es && npm run lint:biome",
        "lint:biome": "biome check .",
        "lint:es": "eslint .",
        "prepare": "npm run build",
        "test": "npm run test:jest && npm run lint",
        "test:jest": "jest"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^(.*)\\.js$": "$1"
        }
    }
}
